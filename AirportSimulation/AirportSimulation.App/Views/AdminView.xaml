        <StackPanel Grid.Column="2" Grid.Row="1" Margin="25 20">
            <TextBlock VerticalAlignment="Center" Foreground="#5D5C61" FontFamily="15"><Run Text="ASC Number of Employees"/></TextBlock>
            <TextBox Name="ascStaffCount" Grid.Row="0" VerticalAlignment="Center" Foreground="#5D5C61" Text="{Binding Path=SimulationSettingsViewModel.Ascs[0].AscStaffCount, Mode=TwoWay}" FontSize="11"/>
        </StackPanel>
        <StackPanel Grid.Column="2" Grid.Row="2" Margin="25 20">
            <TextBlock VerticalAlignment="Center" Foreground="#5D5C61" FontFamily="15"><Run Text="Bag Storage Capacity"/></TextBlock>
            <TextBox Name="bsuCapacity" VerticalAlignment="Center" Foreground="#5D5C61" Text="{Binding Path=SimulationSettingsViewModel.Bsu.BsuCapacity, Mode=TwoWay}" FontSize="11"/>
        </StackPanel>
        <StackPanel Grid.Column="2" Grid.Row="3" Margin="25 20">
            <TextBlock VerticalAlignment="Center" Foreground="#5D5C61" FontFamily="15"><Run Text="Bag Storage # of Robots"/></TextBlock>
            <TextBox Name="bsuRobotsCount" Grid.Row="2" VerticalAlignment="Center" Foreground="#5D5C61" Text="{Binding Path=SimulationSettingsViewModel.Bsu.BsuRobotsCount, Mode=TwoWay}" FontSize="11" Margin="0 2"/>
        </StackPanel>

        <!-- ##########     COLUMN 3     ########## -->

        <StackPanel Grid.Column="3" Grid.Row="1" Margin="25 20">
            <Button Style="{StaticResource MaterialDesignRaisedLightButton}" Width="150"
                         FontSize="12" Command="{Binding CollectSettings}">
                _SAVE
            </Button>
        </StackPanel>
        <StackPanel Grid.Column="3" Grid.Row="2" Margin="25 20">
            <Button Style="{StaticResource MaterialDesignRaisedLightButton}" Width="150"
                         FontSize="12">
                _LOAD
            </Button>
        </StackPanel>
        <StackPanel Grid.Column="3" Grid.Row="3" Margin="25 20">
            <Button Style="{StaticResource MaterialDesignRaisedLightButton}" Width="150"
                         FontSize="12">
                _EXPORT
            </Button>
        </StackPanel>
        <StackPanel Grid.Column="3" Grid.Row="4" Margin="25 20">
            <Button Style="{StaticResource MaterialDesignRaisedLightButton}" Width="150"
                         FontSize="12">
                _IMPORT
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
